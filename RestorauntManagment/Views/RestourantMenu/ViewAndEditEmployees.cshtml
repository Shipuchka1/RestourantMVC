@using RestourantManagement.DAL.Model
@model List<Employee>
@{
    ViewBag.Title = "ViewAndEditEmployees";
    string vacancy = "";

}

<h2>Редактировать работников</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Номер</th>
            <th>Полное имя</th>
            <th>Дата рождения</th>
            <th>Образование</th>
            <th>Опыт</th>
            <th>Навыки</th>
            <th>Телефон</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>

        @foreach (Employee item in Model)
        {
            if (vacancy != item.Job.jobType)
            {
                vacancy = item.Job.jobType;
                <tr class="label-primary"><td colspan="10" align="center" style="font-size:25px">@vacancy</td></tr>
            }

                <tr>
                    <td>@item.EmployeeId</td>
                    <td>@item.fullName</td>
                    <td>@item.dob</td>
                    <td>@item.education</td>
                    <td>@item.experience</td>
                    <td>@item.skills</td>
                    <td>@item.phoneNo</td>
                    <td>@item.username</td>

                    <td><input class="btn btn-primary" type="button" value="Принять" onclick="location.href='@Url.Action("AcceptOrRejectEmloyee", "RestourantMenu" ,new{ id = item.EmployeeId, message = "Вы приняты!"},null)'" /></td>
                    <td><input class="btn btn-primary" type="button" value="Отклонить" onclick="location.href='@Url.Action("AcceptOrRejectEmployee", "RestourantMenu" ,new{ id = item.EmployeeId, message = "Вам отказано в работе"},null)'" /></td>

                </tr>
        }
    </tbody>
</table>


