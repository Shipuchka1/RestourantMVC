@using RestourantManagement.DAL.Model
@model List<EatType>
@{
    ViewBag.Title = "ViewAndEditEatTypes";
    int State = (int)ViewBag.State;
    string Message = ViewBag.Message;
}

@if (State == 0)
{
    <div class="alert alert-success">@Message</div>
}
else if (State == 1)
{
    <div class="alert alert-danger">@Message</div>
}

<h2>ViewAndEditEatTypes</h2>
<table class=" table table-hover">
    <thead>
        <tr>
            <th>Номер</th>
            <th>Наименование</th>
        </tr>
    </thead>
    @foreach (EatType item in Model)
    {


        <tbody>
            <tr>
                <td>@item.eatTypeId</td>
                <td>@item.typeName</td>
                <td><input class="btn btn-primary" type="button" value="Delete" onclick="location.href='@Url.Action("DeleteEatType", "RestourantMenu" ,new{ id = item.eatTypeId},null)'" /></td>
                <td><input class="btn btn-primary" type="button" value="Edit" onclick="location.href='@Url.Action("EatTypes", "RestourantMenu" ,new{ id = item.eatTypeId},null)'" /></td>
            </tr>
        </tbody>
    }
</table>
<input class="btn btn-primary" type="button" value="Add" onclick="location.href='@Url.Action("EatTypes", "RestourantMenu", new { id = 0 })'" />
