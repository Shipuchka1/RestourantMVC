@using RestourantManagement.DAL.Model
@model List<Menu>

@{
    ViewBag.Title = "ListMenu";
    string typeEat = "";
}

<h2>ListMenu</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Номер</th>
            <th>Наименование</th>
            <th>Описание</th>
            <th>Цена</th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (Menu item in Model)
        {
            if (typeEat != item.eatType.typeName)
            {
                typeEat = item.eatType.typeName;
                <tr class="label-primary"><td colspan="4" align="center" style="font-size:25px">@typeEat</td></tr>
            }

        <tr>
            <td>@item.ItemId</td>
            <td>@item.ItemName</td>
            <td>@item.ItemDesc</td>
            <td>@item.Cost</td>

        </tr>
        }
    </tbody>
</table>
