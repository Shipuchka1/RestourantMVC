@using RestourantManagement.DAL.Model
@model List<Menu>
@{
    ViewBag.Title = "ViewAndEditMenu";
    string typeEat = "";

}

<h2>Редактировать меню</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Номер</th>
            <th>Наименование</th>
            <th>Описание</th>
            <th>Цена</th>
        </tr>
    </thead>
    <tbody>

        @foreach (Menu item in Model)
        {
            if (typeEat != item.eatType.typeName)
            {
                typeEat = item.eatType.typeName;
                <tr class="label-primary"><td colspan="6" align="center" style="font-size:25px">@typeEat</td></tr>
            }

                <tr>
                    <td>@item.ItemId</td>
                    <td>@item.ItemName</td>
                    <td>@item.ItemDesc</td>
                    <td>@item.Cost</td>

                    <td><input class="btn btn-primary" type="button" value="Delete" onclick="location.href='@Url.Action("DeleteMenu", "RestourantMenu" ,new{ id = item.ItemId},null)'" /></td>
                    <td><input class="btn btn-primary" type="button" value="Edit" onclick="location.href='@Url.Action("Index", "RestourantMenu" ,new{ id = item.ItemId},null)'" /></td>

                </tr>
        }
    </tbody>
</table>

<input class="btn btn-primary" type="button" value="Add" onclick="location.href='@Url.Action("Index", "RestourantMenu",null)'" />

